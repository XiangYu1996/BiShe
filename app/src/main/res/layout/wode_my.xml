<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的信息"
        android:gravity="center"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/name"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名:"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/name_text"
        android:layout_below="@+id/my"
        android:text="张三"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/user"
        android:layout_below="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号:"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/zhanghao_text"
        android:layout_below="@+id/name_text"
        android:layout_toRightOf="@+id/user"
        android:text="123456789"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/stu_class"
        android:layout_below="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="班级:"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/banji_text"
        android:layout_below="@+id/user"
        android:layout_toRightOf="@+id/user"
        android:text="物联11501"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/stu_num"
        android:layout_below="@+id/stu_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学号:"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/xuehao_text"
        android:layout_below="@+id/stu_class"
        android:layout_toRightOf="@+id/user"
        android:text="0000001"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>