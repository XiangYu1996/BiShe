<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/item_shape"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_qiandao"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"


    >


    <TextView
        android:id="@+id/item_qiandao_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03-215"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/item_qiandao_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_qiandao_address"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/item_qiandao_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_qiandao_class"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/item_qiandao_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="签到"
        android:background="@color/blue_qiandao"
        android:layout_toRightOf="@+id/item_qiandao_teacher"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"/>

</LinearLayout>