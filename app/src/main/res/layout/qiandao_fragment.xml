<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/qiandao_fragment"
    >
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
    android:id="@+id/qiandao_tishi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="以下为签到信息列表"
    android:textSize="25sp"
    android:gravity="center"
    />


    <TextView
        android:id="@+id/qiandao_recycler_null"
        android:layout_below="@+id/qiandao_tishi"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="没有老师开启签到"/>
    <android.support.v7.widget.RecyclerView
    android:id="@+id/qiandao_recyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/qiandao_tishi"
    android:layout_marginTop="50dp"
    >
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
</FrameLayout>